@model BNI.Models.ViewModel.HomeViewModel

@{
    Model.Blogs.Sort((x, y) => string.Compare(y.CreateDate?.ToString(), x.CreateDate?.ToString(),
    StringComparison.OrdinalIgnoreCase));
}

@foreach (var ev in @Model.Blogs)
{
    <div class="d-flex flex-grow-0 flex-shrink-0 col-4">
        <figure class="my-3 w-100 s_blog_posts_post" data-number-of-elements="3">
            <a class="s_blog_posts_post_cover position-relative d-flex flex-column shadow-sm overflow-hidden rounded text-decoration-none"
                href="@Url.Action("Detail", "Blog", new{id=ev.Id})">
                <div data-name="Ảnh bìa" style="" data-use_filters="True" data-res-model="blog.post" data-res-id="5"
                    class="o_record_cover_container d-flex flex-column h-100 o_colored_level o_cc o_cc3 o_cc   h-100 w-100 bg-600 position-absolute">
                    <div style="background-image: url(@ev.Image);" class="o_record_cover_component o_record_cover_image ">
                    </div>
                    <div style="opacity: 0;" class="o_record_cover_component o_record_cover_filter oe_black"></div>
                </div>

                <figcaption class="text-center w-100 h-100 px-3 d-flex flex-column flex-grow-1">
                    <div class="s_blog_posts_post_title text-white">@ev.Title</div>
                </figcaption>
            </a>
        </figure>
    </div>
}