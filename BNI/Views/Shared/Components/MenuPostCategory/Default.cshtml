@model IEnumerable<PostsCategory>
@{
    var currentController = ViewContext.RouteData.Values["controller"] as string;
    var currentAction = ViewContext.RouteData.Values["action"] as string;
}

<ul class="navbar-nav">
    <li class="nav-item">
        <span class="nav-link disabled ps-0">Blogs:</span>
    </li>
    <li class="nav-item">
        <a class="nav-link fw-bold @(currentController == "Blog" && currentAction == "Index" ? "active" : "")" asp-controller="Blog" asp-action="Index">Tất cả</a>
    </li>
    @foreach (var category in Model)
    {
            <li class="nav-item">
                <a class="nav-link fw-bold @(currentController == "Blog" && currentAction == "PostinCategory" && category.Id == ViewBag.SelectedCategoryId ? "active" : "")" 
                   asp-controller="Blog" asp-action="PostinCategory" asp-route-id="@category.Id">@category.Name</a>
            </li>
    }
</ul>

