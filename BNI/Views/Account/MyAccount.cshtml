@using BNI.Common;
@using Newtonsoft.Json;
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "MyAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string userJson = HttpContextAccessor.HttpContext.Session.GetString(CommonConstants.SessionUser);
    User user = null;
    if (userJson != null)
    {
        user = JsonConvert.DeserializeObject<User>(userJson);
    }
}
<head>
    <meta property="og:title" content="My Portal | BNI Vũng Tàu" />
    <meta name="twitter:title" content="My Portal | BNI Vũng Tàu" />
    <title>My Portal | BNI Vũng Tàu</title>
</head>

<main style="">
    <div id="wrap" class="o_portal_wrap">
        <div class="container mb64">
            <div class="row justify-content-between mt-4">
                <div class="col-12 col-md col-lg-6">

                    <div class="o_portal_my_home">
                        <div class="oe_structure" id="oe_structure_portal_my_home_1"></div>
                        <h3>Tài liệu</h3>
                        <div class="o_portal_docs list-group">

                            <p class="o_portal_no_doc_message d-none">No Documents to display</p>
                            <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between d-none"
                               href="/my/leads" title="Tiềm năng">
                                Tiềm năng
                                <span class="badge text-bg-secondary rounded-pill"
                                      data-placeholder_count="lead_count">0</span>
                            </a>
                            <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between d-none"
                               href="/my/opportunities" title="Cơ hội">
                                Cơ hội
                                <span class="badge text-bg-secondary rounded-pill"
                                      data-placeholder_count="opp_count">0</span>
                            </a>
                            <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                               href="/my/quotes" title="Báo giá">
                                Báo giá
                                <span class="badge text-bg-secondary rounded-pill"
                                      data-placeholder_count="quotation_count">0</span>
                            </a>
                            <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                               href="/my/orders" title="Đơn bán hàng">
                                Đơn bán hàng
                                <span class="badge text-bg-secondary rounded-pill"
                                      data-placeholder_count="order_count">0</span>
                            </a>
                            <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between d-none"
                               href="/my/rfq" title="Yêu cầu báo giá">
                                Yêu cầu báo giá
                                <span class="badge text-bg-secondary rounded-pill"
                                      data-placeholder_count="rfq_count">0</span>
                            </a>
                            <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between d-none"
                               href="/my/purchase" title="Đơn mua hàng">
                                Đơn mua hàng
                                <span class="badge text-bg-secondary rounded-pill"
                                      data-placeholder_count="purchase_count">0</span>
                            </a>
                            <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                               href="/my/invoices" title="Hóa đơn &amp; Công nợ">
                                Hóa đơn &amp; Công nợ
                                <span class="badge text-bg-secondary rounded-pill"
                                      data-placeholder_count="invoice_count">0</span>
                            </a>
                            <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between d-none"
                               href="/my/subscription" title="Gói đăng ký">
                                Gói đăng ký
                                <span class="badge text-bg-secondary rounded-pill"
                                      data-placeholder_count="subscription_count">0</span>
                            </a>
                        </div>
                    </div>
                    <div class="oe_structure" id="oe_structure_portal_my_home_2"></div>

                </div>
                <div id="o_my_sidebar" class="pt-3 pt-lg-0 col-12 col-md col-lg-4 col-xl-3 o_my_sidebar">
                    <div class="o_portal_my_details">
                        <h4>
                            Chi tiết <a role="button" href="~/account/information" class="btn btn-sm btn-link">
                                <i class="fa fa-pencil"></i> Edit<span class="o_ripple_item"
                                                                       style="animation-duration: 350ms; width: 64.7625px; height: 64.7625px; top: -23.9812px; left: 0.568701px;"></span>
                            </a>
                        </h4>
                        <hr class="mt-1 mb-0">
                        <div>
                            <address class="mb-0" itemscope="itemscope" itemtype="http://schema.org/Organization">
                                <div>
                                    <span itemprop="name">@user.FullName</span>
                                </div>
                                <div itemprop="address" itemscope="itemscope"
                                     itemtype="http://schema.org/PostalAddress">
                                    <div>
                                        <i class="fa fa-envelope fa-fw" role="img" aria-label="Email"
                                           title="Email"></i> <span itemprop="email">@user.Email</span>
                                    </div>
                                </div>
                            </address>
                        </div>

                    </div>
                    <div class="o_portal_my_security mt-3">
                        <h4>Bảo mật tài khoản </h4>
                        <hr class="mt-1 mb-1">
                        <a href="~/Account/ChangePassword"><i class="fa fa-pencil mx-1"></i>Edit Security Settings</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

