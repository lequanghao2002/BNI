@using BNI.Models.ViewModel;
@model RegisterViewModel
<head>
    <meta property="og:title" content="Câu chuyện thành công | BNI Vũng Tàu" />

    <meta name="twitter:title" content="Câu chuyện thành công | BNI Vũng Tàu" />

    <title>Đăng ký| BNI Vũng Tàu</title>
</head>

<main>
    <div class="oe_website_login_container">
        <form class="oe_signup_form" role="form" asp-controller="Account" asp-action="SignUp" method="post">
            <input type="hidden" name="csrf_token" value="c56fb226e12d938278c164e686b4be3d1483353bo1742396612" />

            <div class="mb-3 field-login">
                <label for="email">Email của Bạn</label>
                <input type="text" name="email" id="email" value="@(Model != null ? Model.Email : "")" class="form-control form-control-sm" autofocus="autofocus" autocapitalize="off" required="required" />
            </div>
            
            <div class="mb-3 field-name">
                <label for="fullName">Tên của Bạn</label>
                <input type="text" name="fullName" id="fullName" value="@(Model != null ? Model.FullName : "")"  class="form-control form-control-sm" placeholder="VD: John Doe" required="required" />
            </div>

            <div class="mb-3 field-password pt-2">
                <label for="password">Mật khẩu</label>
                <input type="password" name="password" id="password" class="form-control form-control-sm" required="required" />
            </div>

            <div class="mb-3 field-confirm_password">
                <label for="rePassword">Xác nhận Mật khẩu</label>
                <input type="password" name="rePassword" id="rePassword" class="form-control form-control-sm" required="required" />
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" name="redirect" />
            <input type="hidden" name="token" />
            <div class="text-center oe_login_buttons d-grid pt-3">
                <button type="submit" class="btn btn-primary"> Đăng ký</button>
                <a class="btn btn-link btn-sm" role="button" href="~/Account/Login">Bạn đã có tài khoản?</a>
                <div class="o_login_auth"></div>
            </div>
        </form>
    </div>

</main>