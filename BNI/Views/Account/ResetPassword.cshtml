<main>

    <div class="oe_website_login_container">

        <form class="oe_reset_password_form" asp-controller="Account" asp-action="ResetPassword" method="post">
            <input type="hidden" name="csrf_token" value="fc409828b88ecdbf76a8b26554346c581a5a64eao1742396613" />


            <div class="mb-3 field-login">
                <label for="email" class="col-form-label">Email của Bạn</label>
                <input type="text" name="email" id="email" class="form-control" autofocus="autofocus" required="required" autocapitalize="off" />
            </div>

            @if (ViewBag.resetSuccess != null)
            {
                <div class="alert alert-success">@ViewBag.resetSuccess</div>
            }

            @if (@ViewBag.resetError != null)
            {
                <div class="alert alert-danger">@ViewBag.resetError</div>
            }

            <input type="hidden" name="redirect" />
            <input type="hidden" name="token" />
            <div class="clearfix oe_login_buttons d-grid mt-3">
                <button type="submit" class="btn btn-primary">Đặt lại Mật khẩu</button>
                <div class="d-flex justify-content-between align-items-center small mt-2">
                    <a href="~/Account/Login">Quay lại Đăng nhập</a>
                </div>
                <div class="o_login_auth"></div>
            </div>

        </form>

    </div>

</main>